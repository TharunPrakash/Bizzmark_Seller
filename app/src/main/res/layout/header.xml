<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    android:layout_alignParentTop="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:id="@+id/tollbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="24dp"
            android:id="@+id/header_storeName"
            android:textColor="#fff"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imgmenu"
            android:layout_toEndOf="@+id/imgmenu"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:editable="true" />

        <!--<ImageButton-->
            <!--android:layout_width="48dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:id="@+id/action_logout"-->
            <!--android:layout_marginRight="5dp"-->
            <!--android:background="@drawable/ic_power_settings_new_white_24px"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_alignTop="@+id/header_storeName" />-->

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="8dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_menu_share"
            android:layout_alignTop="@+id/header_storeName"
            android:layout_alignBottom="@+id/header_storeName"
            android:layout_alignParentEnd="true"
            android:id="@+id/action_Share"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_menu_white_24px"
            android:layout_marginLeft="16dp"
            android:id="@+id/imgmenu"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp" />


    </RelativeLayout>


</RelativeLayout>
