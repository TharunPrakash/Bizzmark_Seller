<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/report_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bizzmark.seller.sellerwithoutlogin.sellerapp.ReportActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/header"
        android:layout_weight="0.54"
        android:background="@color/colorPrimary"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_marginLeft="13dp"
            android:id="@+id/backbut"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart Point Seller"
            android:textSize="22dp"
            android:textColor="#000"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <Spinner
        android:layout_alignParentTop="true"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:prompt="@string/spinner_title"
        android:id="@+id/spinner"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/colorPrimaryDark">

    </Spinner>

    <LinearLayout

        android:id="@+id/scrollbody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/spinner"
        android:layout_above="@+id/footer"
        android:background="#fff">

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_below="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <TableLayout
                android:gravity="center"
                android:id="@+id/table_main"
                android:background="#FFBBCC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <TableRow
                    android:id="@+id/tablerow"
                    android:background="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TableRow>

            </TableLayout>

        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#BBCCDD">
        <TextView
            android:layout_weight="1"
            android:id="@+id/bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Bill"/>
        <TextView
            android:layout_weight="1"
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Points"/>
        <TextView
            android:layout_weight="1"
            android:id="@+id/discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Discount"/>

    </LinearLayout>


</RelativeLayout>
