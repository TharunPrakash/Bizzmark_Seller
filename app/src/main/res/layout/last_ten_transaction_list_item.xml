<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:padding="2dp"
                    android:background="@color/BLACK">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Transaction ID"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="18dp"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text=":"
                        android:textColor="@color/colorWhite"
                        android:textSize="18dp"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:width="0dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/transId"
                        android:textColor="@color/colorWhite"
                        android:textSize="18dp"
                        android:editable="true" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:padding="2dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:text="Type"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/BLACK"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text=":"
                        android:textColor="@color/BLACK"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/lastTenTransType"
                        android:textColor="@color/BLACK"
                        android:editable="true" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:padding="2dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:text="Bill Amount"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/BLACK"
                        android:textSize="16dp"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text=":"
                        android:textColor="@color/BLACK"
                        android:textSize="16dp"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/originalBillReport"
                        android:textColor="@color/BLACK"
                        android:textSize="16dp"
                        android:editable="true" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:padding="2dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:text="Points"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/BLACK"
                        android:textSize="16dp"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text=":"
                        android:textColor="@color/BLACK"
                        android:textSize="16dp"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/recentTranBillpoints"
                        android:textColor="@color/BLACK"
                        android:textSize="16dp"
                        android:editable="true" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:padding="2dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:text="Dicounted Amount"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/BLACK"
                        android:id="@+id/disableStoreName"
                        android:editable="true"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text=":"
                        android:id="@+id/disableColon"
                        android:textColor="@color/BLACK"
                        android:editable="true"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/discountedAmount"
                        android:textColor="@color/BLACK"
                        android:editable="true" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:padding="2dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:text="New Bill Amount"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/BLACK"
                        android:id="@+id/disableNewBillAmount"
                        android:editable="true"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text=":"
                        android:editable="true"
                        android:id="@+id/disableNewBillColon"
                        android:textColor="@color/BLACK"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/newbillamount"
                        android:textColor="@color/BLACK"
                        android:editable="true" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:padding="2dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:text="Date And Time"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/BLACK"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text=":"
                        android:textColor="@color/BLACK"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/transactionAt"
                        android:textColor="@color/BLACK"
                        android:editable="true" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorlightAccent"
        android:layout_margin="3dp"/>


</LinearLayout>