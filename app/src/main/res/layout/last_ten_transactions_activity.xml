<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/last_ten_transactions_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bizzmark.seller.sellerwithoutlogin.sellerapp.LastTenTransactions">

    /*header of this activity*/

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/header"
        android:layout_weight="0.54"
        android:background="@color/colorPrimary"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_back_white_24dp"
            android:layout_marginLeft="13dp"
            android:id="@+id/backbut"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart Point Seller"
            android:textSize="22dp"
            android:textColor="#fff"
            android:layout_centerInParent="true"
            android:editable="true"
            android:id="@+id/lastTransHeader"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/cardview_dark_background"
                android:text="@string/recenTransactions"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="20dp"/>


        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rdView">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</RelativeLayout>
