<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:padding="2dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:text="Bill Amount"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/BLACK"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text=":"
                        android:textColor="@color/BLACK"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:text="1200"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/billReport"
                        android:textColor="@color/BLACK"/>
                </TableRow>
                <TableRow android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:padding="2dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:text="Type"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/BLACK"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text=":"
                        android:textColor="@color/BLACK"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:text="12-May-2016 02:05:00"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/billDateAndTime"
                        android:textColor="@color/BLACK"/>
                </TableRow>
                <TableRow android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:padding="2dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:text="Points"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/BLACK"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text=":"
                        android:textColor="@color/BLACK" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:text="120"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/billPoints"
                        android:textColor="@color/BLACK"/>

                </TableRow>
                <TableRow android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:padding="2dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:text="Date And Time"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/BLACK" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text=":"
                        android:textColor="@color/BLACK"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:text="8578248625962"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/billDeviceId"
                        android:textColor="@color/BLACK"/>
                </TableRow>

                <TableRow android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:padding="2dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:text="Device Id"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/BLACK" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text=":"
                        android:textColor="@color/BLACK"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:text="8578248625962"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/storename"
                        android:textColor="@color/BLACK"/>
                </TableRow>

                <TableRow android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:padding="2dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:text="Store Name"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/BLACK" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text=":"
                        android:textColor="@color/BLACK" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:text="8578248625962"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/type"
                        android:textColor="@color/BLACK"/>
                </TableRow>

            </TableLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>